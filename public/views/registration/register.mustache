<form action="{{ form_action_url }}" method="post">
	<input name="{{ action_field.name }}" value="{{ action_field.value }}" type="hidden"/>
	<div class="{{ action_field.value }}-view">
	  <section class="title clearfix justify-content-center">
		{{# fields }}
			{{{ . }}}
		{{/ fields }}
		<br/><br/>
		<div class="form-group row align-items-center submit-block">
			<div class="col-12" style="text-align: center;">
				<button class="btn btn-primary" type="submit">
					{{ submit_button }}
				</button>
			</div>
		</div>
	  </section>
	</div>
</form>